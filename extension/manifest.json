{
  "manifest_version": 3,
  "name": "My Chatbot Extension",
  "version": "1.0",
  "description": "A chatbot extension",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Toggle Chatbot"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["script.js", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}